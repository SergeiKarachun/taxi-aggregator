<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">


    <changeSet id="01-create-passenger-table" author="Sergey Karachun">
        <preConditions onFail="HALT">
            <not>
                <tableExists tableName="passenger"/>
            </not>
        </preConditions>
        <sqlFile path="sql/create-passenger-table.sql" relativeToChangelogFile="true"/>
        <rollback>
            <sqlFile path="sql/drop-passenger-table.sql"/>
        </rollback>
    </changeSet>
</databaseChangeLog>