<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="04-add-constraint-into-rating-table" author="Sergey Karachun">
        <preConditions onFail="HALT">
            <not>
                <foreignKeyConstraintExists foreignKeyName="rating_passenger_fk"/>
            </not>
        </preConditions>
        <sqlFile path="sql/add-constraint-into-rating-table.sql" relativeToChangelogFile="true"/>
        <rollback>
            <sqlFile path="sql/drop-rating-table-fk.sql"/>
        </rollback>
    </changeSet>

</databaseChangeLog>